<UserControl x:Class="RPG_Notes.UserControls.ListSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPG_Notes.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button x:Name="btnAddList" Content="Add List"
                FontSize="17"
                Click="btnAddList_Click"/>
        
        <Button Grid.Row="1" x:Name="btnRenameList" Content="Rename List"
                FontSize="17"
                Click="btnRenameList_Click"/>
        
        <Button Grid.Row="2" x:Name="btnDeleteList" Content="Delete List"
                FontSize="17"
                Click="btnDeleteList_Click"/>
    </Grid>
</UserControl>
